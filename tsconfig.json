    "outDir": "./build/",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015.promise",
      "es5",
      "dom"
    ],
    "sourceMap": true,
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}